general {
        colors = true
        interval = 5
	color_good = "#36E592"
	color_degraded = "#CE9726"
	color_bad = "#CE4B4F"
	color_separator = "#B3BEFF"
}


order += "wireless _first_"
order += "volume master"
order += "battery 0"
order += "tztime local"


wireless _first_ {
	format_up = "  ï‡«  %essid (%quality) "
